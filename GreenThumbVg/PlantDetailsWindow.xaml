<Window x:Class="GreenThumbVg.PlantDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumbVg"
        mc:Ignorable="d"
                            Title="Plant Details Window" Height="400" Width="550" Background="LightBlue">
    <Grid>
        <Label Content="Name:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0" />
        <TextBox Name="txtName" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="180,20,0,0" IsReadOnly="True"/>

        <Label Content="Instructions:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,60,0,0" />
        <TextBox Name="txtInstructions" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="180,60,0,0" IsReadOnly="True"/>






        <Button 
                Content="Back" Name="btnBack" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Width="100"
                Height="30"
                Margin="20,310,0,0" 
                  />
        


    </Grid>
</Window>