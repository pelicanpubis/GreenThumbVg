                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Instructions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding NameOfInstruction}"/>
