<Window x:Class="GreenThumbVg.AddPlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumbVg"
        mc:Ignorable="d"
          Title="Add Plant Window" Height="450" WindowStartupLocation="CenterScreen" Width="800" Background="BlanchedAlmond" ResizeMode="NoResize">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/garden.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- Kundinformation -->

        <Label 
     Grid.Column="6"
     Grid.Row="1"
     Content="Added Instructions"
     FontSize="16"
     Padding="0"
     VerticalAlignment="Top" Margin="0,18,54,0" Grid.ColumnSpan="2" Foreground="Black" FontWeight="Bold"/>

        <Label 
            Grid.Column="1"
            Grid.Row="3"
            Content="Name of Plant"
            FontSize="16"
            Padding="0"
            VerticalAlignment="Center" Foreground="Black" FontWeight="Bold"/>

        <Label
       Grid.Row="4"
       Content="Instruction Name"
       FontSize="16"
       Padding="0"
       VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="0,10,63,0" Foreground="Black" FontWeight="Bold"/>

        <Label 
            Grid.Column="1"
            Grid.Row="5"
            Content="Instruction"
            FontSize="16"
            Padding="0"
            VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,0,98,0" FontWeight="Bold"/>



        <TextBox 
    Name="txtInstructionName"
    Grid.Column="2"
    Grid.Row="4" 
    Grid.ColumnSpan="3"
    Height="20"
    Margin="19,20,19,9"/>

        <TextBox 
            Name="txtNameOfPlant"
            Grid.Column="2"
            Grid.Row="3" 
            Grid.ColumnSpan="3"
            Height="20"
            Margin="19,13,19,16"/>

        <TextBox 
            Name="txtInstruction"
            Grid.Column="2"
            Grid.Row="5" 
            Grid.ColumnSpan="3"
            Height="20"
            Margin="19,19,19,10"/>


        <ListView 
            Name="lstPlants"
            Grid.Column="4"
            Grid.ColumnSpan="4"
            Grid.RowSpan="8" 
            Margin="103,39,1,49" Grid.Row="1"/>


        <!-- Valideringsmeddelanden (om några) -->

        <TextBlock 
            x:Name="txtValidationMessage"
            Grid.Column="2"
            Grid.Row="7"
            Grid.ColumnSpan="3"
            Foreground="Red"
            Margin="0 5 0 0"/>

        <!-- Beställningsknapp -->


        <Button
    Name="btnAddInstruction"
    Grid.Column="4"
    Grid.Row="6"
    Content="Add Instruction"
    FontSize="12"
    Background="LightPink"
    Margin="1,10,19,10" Click="btnAddInstruction_Click"/>


        <Button 
      Name="btnGoBack"
      Grid.Column="1"
      Grid.Row="8"
      Content="Plant Window"
      FontSize="12"
      Background="LightPink"
      Margin="10,5,10,15" Click="btnGoBack_Click"/>

    </Grid>
</Window>