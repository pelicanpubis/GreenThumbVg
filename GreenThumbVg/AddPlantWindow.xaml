                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>-->

        <ListView 
            Name="lstPlants"
            Grid.Column="4"
            Grid.ColumnSpan="4"
            Grid.RowSpan="8" 
            Margin="103,39,1,49" Grid.Row="1"/>


        <!-- Valideringsmeddelanden (om några) -->

        <TextBlock 
            x:Name="txtValidationMessage"
            Grid.Column="2"
            Grid.Row="7"
            Grid.ColumnSpan="3"
            Foreground="Red"
            Margin="0 5 0 0"/>

        <!-- Beställningsknapp -->


        <Button
    Name="btnAddInstruction"
    Grid.Column="2"
    Grid.Row="6"
    Content="Add Instruction"
    FontSize="12"
    Background="LightBlue"
    Margin="10" Click="btnAddInstruction_Click"/>


        <Button 
      Name="btnGoBack"
      Grid.Column="6"
      Grid.Row="8"
      Grid.ColumnSpan="2"
      Content="Go back to plant window"
      FontSize="12"
      Background="Pink"
      Margin="10" Click="btnGoBack_Click"/>

    </Grid>
</Window>