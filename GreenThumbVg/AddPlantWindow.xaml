<Window x:Class="GreenThumbVg.AddPlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumbVg"
        mc:Ignorable="d"
          Title="Add Plant Window" Height="450" Width="800" Background="BlanchedAlmond" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- Kundinformation -->

        <Label 
     Grid.Column="6"
     Grid.Row="1"
     Content="Added Instructions"
     FontSize="16"
     Padding="0"
     VerticalAlignment="Top" Margin="0,18,54,0" Grid.ColumnSpan="2"/>

        <Label 
            Grid.Column="1"
            Grid.Row="3"
            Content="Name of Plant"
            FontSize="16"
            Padding="0"
            VerticalAlignment="Center"/>

        <Label
       Grid.Row="4"
       Content="Instruction Name"
       FontSize="16"
       Padding="0"
       VerticalAlignment="Center" Grid.ColumnSpan="3" Margin="10,0,108,0"/>

        <Label 
            Grid.Column="1"
            Grid.Row="5"
            Content="Instruction"
            FontSize="16"
            Padding="0"
            VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,0,98,0"/>



        <TextBox 
    Name="txtInstructionName"
    Grid.Column="2"
    Grid.Row="4" 
    Grid.ColumnSpan="3"
    Height="20"
    Margin="0 0 10 0"/>

        <TextBox 
            Name="txtNameOfPlant"
            Grid.Column="2"
            Grid.Row="3" 
            Grid.ColumnSpan="3"
            Height="20"
            Margin="0 0 10 0"/>

        <TextBox 
            Name="txtInstruction"
            Grid.Column="2"
            Grid.Row="5" 
            Grid.ColumnSpan="3"
            Height="20"
            Margin="0 0 10 0"/>

        <!--<ListView Name="lstPlants" Grid.Column="4" Grid.ColumnSpan="4" Grid.RowSpan="8" Margin="103,39,1,49" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Plant Name" DisplayMemberBinding="{Binding NameOfPlant}" Width="150"/>
                    <GridViewColumn Header="Instructions" Width="300">
